title = {{Ultra-long-distance transport of supercritical natural gas (SNG) at very-high mass flow rates via pipelines through land, underground, water bodies, and ocean}},
url = {https://www.sciencedirect.com/science/article/pii/S2949908923001814},
volume = {117},
