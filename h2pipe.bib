file = {:E\:/Other computers/SnowWhite/__Hydrogen & gas grid/z-Hydrogen_pipe_friction-paper/bennett-elwell-2020-effect-of-boiler-oversizing-on-efficiency-a-dynamic-simulation-study.pdf:pdf},
issn = {14770849},
journal = {Building Services Engineering Research and Technology},
keywords = {Building energy simulation,boiler,buildings energy performance,domestic buildings,space heating},
number = {6},
pages = {709--726},
title = {{Effect of boiler oversizing on efficiency: a dynamic simulation study}},
volume = {41},
