keywords = {compressibility factor,erosional velocity,hydrogen,hydrogen blending,natural gas},
number = {4},
pages = {156--179},
title = {{An Investigation into the Volumetric Flow Rate Requirement of Hydrogen Transportation in Existing Natural Gas Pipelines and Its Safety Implications}},
volume = {1},
year = {2021}
}
